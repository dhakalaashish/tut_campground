<% layout('templates/boilerplate.ejs') -%>

    <h1 class="text-center mt-5">Make a new campground</h1>
    <div class="container m-auto mt-5 mb-5 w-50">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="input-group input-group-lg mb-3">
                <label class="input-group-text" for="title">Title</label>
                <input type="text" class="form-control" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-lg" id="title" name="campground[title]"
                    value="<%=campground.title%>"">
            </div>
            <div class=" input-group input-group-lg mb-3">
                <label class="input-group-text" for="location">Location</label>
                <input type="text" class="form-control" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-lg" id="location" name="campground[location]"
                    value="<%=campground.location%>">
            </div>
            <div>
                <label for="price" class="form-label">Price per night</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" id="price"
                        name="campground[price]" value="<%=campground.price%>">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="input-group input-group-lg mb-3 mt-3">
                <label class="input-group-text" for="image">Image address</label>
                <input type="text" class="form-control" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-lg" id="image" name="campground[image]"
                    value="<%=campground.image%>">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" rows="3"
                    name="campground[description]"><%=campground.description%></textarea>
            </div>
            <button type="submit" class="btn btn-success btn-lg">Submit</button>
        </form>
    </div>