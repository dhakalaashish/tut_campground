<% layout('templates/boilerplate.ejs') -%>
    <div class="container d-flex w-100 justify-content-center mt-3 mb-3">
        <div class="card" style="width: 18rem;">
            <img src=<%=campground.image%> class="card-img-top" alt=<%=campground.title%>>
                <div class="card-body">
                    <h5 class="card-title">
                        <%=campground.title%>
                    </h5>
                    <p class="card-text">
                        <%=campground.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">$<%=campground.price%>/per night</li>
                    <li class="list-group-item text-muted">
                        <%=campground.location%>
                    </li>
                </ul>
                <div class="card-body d-flex">
                    <button type="submit" class="btn btn-info w-25"> <a href="/campgrounds/<%=campground.id%>/edit"
                            class="card-link">Edit</a></button>
                    <form action="/campgrounds/<%=campground.id%>?_method=DELETE" method="POST" class="w-50">
                        <button type="submit" class="btn btn-warning card-link">Delete</button>
                    </form>
                </div>
        </div>
    </div>